@model IEnumerable<Blog_Sitesi.Models.KategoriModel>

@{
    ViewBag.Title = "Kategori Listesi";
}

<h2>Kategori Listesi</h2>

<p>
    @Html.ActionLink("Yeni Kategori Ekle", "Create", null, new { @class = "btn btn-primary" })
</p>

<hr />
@if (TempData["Kategori"]!=null)
{
    var kategori = (Blog_Sitesi.Models.Kategori)TempData["Kategori"];

    <div class="alert alert-success">
        <strong><span class="glyphicon glyphicon-ok"></span> @kategori.KategoriAdi </strong>Eklendi...
    </div>
}


<table class="table table-bordered table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.KategoriAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BlogSayisi)
        </th>
        <th style="width:170px"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.KategoriAdi)
            </td>
            <td>
                @item.BlogSayisi
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-xs" }) |
                @Html.ActionLink("Detay", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-xs" }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
            </td>
        </tr>
    }

</table>
