@model IEnumerable<Blog_Sitesi.Models.BlogModel>

@if (Model.Count()==0)
{
    <br />
    <div class="alert alert-warning">
        <h4>Kayıt Bulunamadı...</h4>
    </div>
}

@foreach (var item in Model)
{
    <div class="blog">
        <h3 class="page-header">@item.Baslik</h3>
        <p>
            <span class="glyphicon glyphicon-time">@item.Tarih</span>
        </p>
        <hr />
        <img class="img-responsive" src="http://placehold.it/900x300" alt="" />
        <hr />
        <h5>Ekleyen: @item.Yazar</h5>
        <hr />
        @Html.ActionLink("Daha Fazla...", "Details", "Blog", new { id = @item.Id }, new { @class = "btn btn-primary" })

    </div>
}